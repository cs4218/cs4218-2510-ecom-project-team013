{
  "name": "ecom",
  "version": "1.0.0",
  "description": "ecommerce rest api",
  "private": true,
  "main": "server.js",
  "scripts": {
    "start": "tsx server.ts",
    "server": "tsx watch server.ts",
    "client": "npm start --prefix ./client",
    "format": "prettier --ignore-path .gitignore --ignore-path client/.gitignore --ignore-path client/src/.gitignore . --write",
    "format:check": "prettier --ignore-path .gitignore --ignore-path client/.gitignore --ignore-path client/src/.gitignore . --list-different",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "sonarqube": "sonarqube-scanner",
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
    "test:frontend": "npm run test --prefix ./client",
    "test:frontend:coverage": "npm run test --prefix ./client -- --coverage",
    "test:frontend:watch": "npm run test --prefix ./client -- --watch",
    "test:backend": "jest --passWithNoTests",
    "seed": "tsx scripts/reset-db.ts",
    "test:e2e": "cd client && npx playwright test",
    "test:e2e:ui": "cd client && npx playwright test --ui",
    "test:e2e:headed": "cd client && npx playwright test --headed",
    "test:e2e:codegen": "cd client && npx playwright codegen --base-url=http://localhost:3000"
  },
  "keywords": [],
  "author": "RP",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "braintree": "^3.22.0",
    "colors": "^1.4.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "date-fns": "^3.3.1",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-formidable": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "mongoose": "^8.1.2",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.3",
    "slugify": "^1.6.6",
    "tsx": "^4.20.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.0",
    "@types/bcrypt": "^5.0.2",
    "@types/braintree": "^3.4.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/express-formidable": "^1.2.3",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.12.12",
    "eslint": "^9.35.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.3",
    "prettier": "^3.6.2",
    "sonarqube-scanner": "^3.3.0",
    "ts-jest": "^29.4.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  }
}
